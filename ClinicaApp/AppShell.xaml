<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="ClinicaApp.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:ClinicaApp.Views"
       FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Login" 
                      ContentTemplate="{DataTemplate views:LoginPage}" 
                      Route="login" />
    </TabBar>

    <TabBar>
        <ShellContent Title="Principal" 
                      ContentTemplate="{DataTemplate views:MainPage}" 
                      Route="main" />
        <ShellContent Title="Atender Pacientes"
              Route="AttendPatientsPage"
              ContentTemplate="{DataTemplate views:AttendPatientsPage}" />
    </TabBar>

</Shell>