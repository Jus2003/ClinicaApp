<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ClinicaApp.Views.ResponderTriajePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ClinicaApp.ViewModels"
             x:DataType="viewmodels:ResponderTriajeViewModel"
             Title="Responder Triaje">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Loading -->
            <ActivityIndicator IsVisible="{Binding IsLoading}" 
                             IsRunning="{Binding IsLoading}" 
                             Color="#4CAF50" />

            <!-- Header -->
            <Frame BackgroundColor="#2196F3" 
                   HasShadow="True" 
                   CornerRadius="10"
                   IsVisible="{Binding HasInfoCita}">
                <StackLayout Spacing="5">
                    <Label Text="📝 TRIAJE MÉDICO" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center" />

                    <Label Text="{Binding InfoCitaTexto}" 
                           FontSize="14" 
                           TextColor="LightBlue" 
                           HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- Progreso -->
            <Frame BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="10"
                   IsVisible="{Binding HasPreguntas}">
                <StackLayout>
                    <Label Text="{Binding ProgresoTexto}" 
                           FontSize="14" 
                           FontAttributes="Bold" 
                           TextColor="#333" 
                           HorizontalOptions="Center" />

                    <ProgressBar Progress="{Binding ProgresoDecimal}" 
                               ProgressColor="#4CAF50" 
                               BackgroundColor="LightGray" 
                               HeightRequest="8" />
                </StackLayout>
            </Frame>

            <!-- Messages -->
            <Label Text="{Binding Message}" 
                   TextColor="{Binding MessageColor}" 
                   FontAttributes="Bold" 
                   IsVisible="{Binding HasMessage}" 
                   HorizontalOptions="Center" />

            <!-- Preguntas -->
            <CollectionView ItemsSource="{Binding Preguntas}" 
                          BackgroundColor="Transparent"
                          IsVisible="{Binding HasPreguntas}">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White" 
                               HasShadow="True" 
                               CornerRadius="10" 
                               Margin="0,5" 
                               Padding="15">

                            <StackLayout Spacing="10">

                                <!-- Pregunta -->
                                <Label Text="{Binding TituloConAsterisco}" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="{Binding TituloColor}" />

                                <!-- Input Texto -->
                                <Entry Text="{Binding Respuesta}" 
                                       Placeholder="Escriba su respuesta..."
                                       FontSize="14"
                                       IsVisible="{Binding EsTexto}" />

                                <!-- Input Número -->
                                <Entry Text="{Binding Respuesta}" 
                                       Placeholder="Ingrese un número..."
                                       Keyboard="Numeric"
                                       FontSize="14"
                                       IsVisible="{Binding EsNumero}" />

                                <!-- Escala 1-10 -->
                                <StackLayout IsVisible="{Binding EsEscala}" Spacing="10">
                                    <Slider x:Name="SliderEscala"
                                            Minimum="1" 
                                            Maximum="10" 
                                            Value="{Binding ValorNumerico}"
                                            ThumbColor="#4CAF50"
                                            MinimumTrackColor="#4CAF50" />

                                    <Label Text="{Binding ValorNumerico, StringFormat='Valor: {0:F0}'}" 
                                           HorizontalOptions="Center" 
                                           FontAttributes="Bold" 
                                           TextColor="#4CAF50" />
                                </StackLayout>

                                <!-- Múltiple Selección -->
                                <Picker ItemsSource="{Binding Opciones}" 
                                        SelectedItem="{Binding Respuesta}"
                                        Title="Seleccione una opción"
                                        FontSize="14"
                                        IsVisible="{Binding EsMultiple}" />

                                <!-- Sí/No -->
                                <StackLayout Orientation="Horizontal" 
                                           Spacing="20" 
                                           HorizontalOptions="Center"
                                           IsVisible="{Binding EsSiNo}">

                                    <Button Text="✅ SÍ" 
                                            BackgroundColor="#4CAF50" 
                                            TextColor="White" 
                                            CornerRadius="20" 
                                            Padding="20,10"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ResponderTriajeViewModel}}, Path=SeleccionarSiNoCommand}"
                                            CommandParameter="Sí" />

                                    <Button Text="❌ NO" 
                                            BackgroundColor="#F44336" 
                                            TextColor="White" 
                                            CornerRadius="20" 
                                            Padding="20,10"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ResponderTriajeViewModel}}, Path=SeleccionarSiNoCommand}"
                                            CommandParameter="No" />
                                </StackLayout>

                                <!-- Respuesta actual para Sí/No -->
                                <Label Text="{Binding Respuesta, StringFormat='Seleccionado: {0}'}" 
                                       HorizontalOptions="Center" 
                                       FontAttributes="Bold" 
                                       TextColor="#666"
                                       IsVisible="{Binding EsSiNoYTieneRespuesta}" />

                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Botón Enviar -->
            <Button Text="📤 ENVIAR TRIAJE" 
                    Command="{Binding EnviarTriajeCommand}"
                    BackgroundColor="#4CAF50" 
                    TextColor="White" 
                    FontAttributes="Bold" 
                    FontSize="16" 
                    CornerRadius="25" 
                    Padding="20,15"
                    IsVisible="{Binding PuedeEnviar}" />

            <!-- Mensaje de completado -->
            <Frame BackgroundColor="#4CAF50" 
                   HasShadow="True" 
                   CornerRadius="10"
                   IsVisible="{Binding TriajeCompletado}">
                <StackLayout>
                    <Label Text="✅ TRIAJE COMPLETADO" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center" />

                    <Label Text="Su triaje ha sido enviado exitosamente" 
                           FontSize="14" 
                           TextColor="LightGreen" 
                           HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>