<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ClinicaApp.Views.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ClinicaApp.ViewModels"
             xmlns:models="clr-namespace:ClinicaApp.Models"
             x:DataType="viewmodels:MainPageViewModel"
             Title="Inicio">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Información del usuario -->
            <Frame BackgroundColor="#4CAF50" 
                   HasShadow="True" 
                   CornerRadius="15">
                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">

                    <Ellipse Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"
                             Fill="White" 
                             WidthRequest="60" 
                             HeightRequest="60"
                             VerticalOptions="Center" />

                    <Label Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"
                           Text="👤" 
                           FontSize="30"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" />

                    <Label Grid.Row="0" Grid.Column="1" 
                           Text="{Binding UserName}"
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           Margin="15,0,0,0" />

                    <Label Grid.Row="1" Grid.Column="1" 
                           Text="{Binding UserRole}"
                           FontSize="14" 
                           TextColor="White" 
                           Opacity="0.9" 
                           Margin="15,0,0,0" />

                    <Label Grid.Row="2" Grid.Column="1" 
                           Text="{Binding UserBranch}"
                           FontSize="12" 
                           TextColor="White" 
                           Opacity="0.8" 
                           Margin="15,0,0,0" />

                    <Button Grid.Row="0" Grid.Column="2" 
                            Text="Salir"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="12"
                            Command="{Binding LogoutCommand}" />

                </Grid>
            </Frame>

            <!-- Menús disponibles -->
            <Label Text="Menús Disponibles" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   TextColor="#2E7D32" />

            <CollectionView ItemsSource="{Binding Menus}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Menu">
                        <Grid Padding="0,5">
                            <Frame BackgroundColor="White" 
                                   HasShadow="True" 
                                   CornerRadius="10" 
                                   Padding="15">

                                <StackLayout>
                                    <Label Text="{Binding NombreMenu}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" 
                                           TextColor="#2E7D32" />

                                    <CollectionView ItemsSource="{Binding Submenus}" 
                                                    Margin="10,5,0,0">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="models:SubMenu">
                                                <Grid Padding="5">
                                                    <Button Text="{Binding NombreSubmenu}"
                                                            BackgroundColor="Transparent"
                                                            TextColor="#666"
                                                            FontSize="14"
                                                            HorizontalOptions="Start"
                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateCommand}"
                                                            CommandParameter="{Binding .}" />
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>

                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ScrollView>
</ContentPage>