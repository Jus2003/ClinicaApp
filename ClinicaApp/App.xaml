<?xml version="1.0" encoding="UTF-8" ?>
<Application x:Class="ClinicaApp.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:ClinicaApp.Helpers">

    <Application.Resources>
        <ResourceDictionary>
            <helpers:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <helpers:StringNotNullOrEmptyConverter x:Key="StringNotNullOrEmptyConverter" />
            <helpers:BoolToColorConverter x:Key="BoolToColorConverter" />
            <helpers:NullToBoolConverter x:Key="NullToBoolConverter" />
            <helpers:SelectedItemBackgroundConverter x:Key="SelectedItemBackgroundConverter" />

            <!-- ✅ AGREGAR ESTOS NUEVOS CONVERTIDORES -->
            <helpers:BoolToSuccessColorConverter x:Key="BoolToSuccessColorConverter" />
            <helpers:StringToBoolConverter x:Key="StringToBoolConverter" />
